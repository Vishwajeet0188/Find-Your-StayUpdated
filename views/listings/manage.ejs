<% layout('layouts/boilerplate') %>

<div class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <div>
            <h1>Property Dashboard</h1>
            <p>Manage your listings and track performance</p>
        </div>
        <a href="/listings/new" class="add-btn">
            <i class="fas fa-plus-circle"></i>
            Add Property
        </a>
    </div>

    <!-- Quick Stats -->
    <div class="quick-stats">
        <div class="stat-box">
            <div class="stat-content">
                <h3><%= listings.length %></h3>
                <p>Listings</p>
            </div>
            <div class="stat-icon">
                <i class="fas fa-home"></i>
            </div>
        </div>
        <div class="stat-box">
            <div class="stat-content">
                <h3><%= bookingsCount || 0 %></h3>
                <p>Bookings</p>
            </div>
            <div class="stat-icon">
                <i class="fas fa-calendar-check"></i>
            </div>
        </div>
        <div class="stat-box">
            <div class="stat-content">
                <h3>$<%= totalRevenue || 0 %></h3>
                <p>Revenue</p>
            </div>
            <div class="stat-icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
        </div>
        <div class="stat-box">
            <div class="stat-content">
                <h3><%= avgRating ? avgRating.toFixed(1) : '0.0' %></h3>
                <p>Rating</p>
            </div>
            <div class="stat-icon">
                <i class="fas fa-star"></i>
            </div>
        </div>
    </div>

    <!-- Listings Table -->
    <div class="listings-table-container">
        <div class="table-header">
            <h2>Your Properties</h2>
            <div class="table-actions">
                <button class="filter-btn active">All</button>
                <button class="filter-btn">Active</button>
                <button class="filter-btn">Inactive</button>
            </div>
        </div>

        <% if (listings.length === 0) { %>
        <div class="empty-table">
            <div class="empty-icon">
                <i class="fas fa-home"></i>
            </div>
            <h3>No Properties Listed Yet</h3>
            <p>Start earning by listing your property</p>
            <a href="/listings/new" class="create-btn">
                <i class="fas fa-plus"></i>
                Create First Listing
            </a>
        </div>
        <% } else { %>
        <div class="table-responsive">
            <table class="listings-table">
                <thead>
                    <tr>
                        <th>Property</th>
                        <th>Status</th>
                        <th>Price</th>
                        <th>Bookings</th>
                        <th>Rating</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% listings.forEach(listing => { %>
                    <tr>
                        <td class="property-cell">
                            <% if (listing.image && listing.image.url) { %>
                            <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="property-thumb">
                            <% } else { %>
                            <div class="property-thumb placeholder">
                                <i class="fas fa-home"></i>
                            </div>
                            <% } %>
                            <div class="property-info">
                                <h4><%= listing.title %></h4>
                                <p class="location">
                                    <i class="fas fa-map-marker-alt"></i> 
                                    <%= listing.location %>
                                </p>
                                <div class="property-meta">
                                    <span><i class="fas fa-user-friends"></i> <%= listing.maxGuests %></span>
                                    <span><i class="fas fa-bed"></i> <%= listing.bedrooms %></span>
                                    <span><i class="fas fa-bath"></i> <%= listing.bathrooms %></span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="status-badge <%= listing.isActive ? 'active' : 'inactive' %>">
                                <i class="fas fa-<%= listing.isActive ? 'check-circle' : 'pause-circle' %>"></i>
                                <%= listing.isActive ? 'Active' : 'Inactive' %>
                            </span>
                        </td>
                        <td class="price-cell">
                            <strong>$<%= listing.price %></strong>
                            <span>/night</span>
                        </td>
                        <td>
                            <div class="booking-stats">
                                <span class="booking-count"><%= listing.bookingsCount || 0 %></span>
                                <span class="booking-label">bookings</span>
                            </div>
                        </td>
                        <td>
                            <% if (listing.rating) { %>
                            <div class="rating-display">
                                <div class="stars">
                                    <% for(let i = 1; i <= 5; i++) { %>
                                    <i class="fas fa-star <%= i <= Math.round(listing.rating) ? 'filled' : '' %>"></i>
                                    <% } %>
                                </div>
                                <span class="rating-value"><%= listing.rating.toFixed(1) %></span>
                            </div>
                            <% } else { %>
                            <span class="no-rating">No reviews</span>
                            <% } %>
                        </td>
                        <td class="action-cell">
                            <div class="action-buttons">
                                <a href="/listings/<%= listing._id %>" class="action-btn view-btn" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/listings/<%= listing._id %>/edit" class="action-btn edit-btn" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
                                    <button type="submit" class="action-btn delete-btn" title="Delete" onclick="return confirm('Delete this listing?')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <% } %>
    </div>

    <!-- Performance Insights -->
    <div class="insights-section">
        <div class="insights-header">
            <h2><i class="fas fa-chart-line"></i> Performance Insights</h2>
            <span class="insights-period">This Month</span>
        </div>
        <div class="insights-grid">
            <div class="insight-card">
                <div class="insight-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <div class="insight-content">
                    <h3>Booking Rate</h3>
                    <p><%= bookingRate %>% booked</p>
                    <div class="progress-bar">
                       <div class="progress-fill" style="width: '<%= bookingRate || 0 %>%';"></div>
                    </div>
                </div>
            </div>
            <div class="insight-card">
                <div class="insight-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="insight-content">
                    <h3>Average Stay</h3>
                    <p><%= avgStayLength %> nights</p>
                    <div class="trend up">
                        <i class="fas fa-arrow-up"></i>
                        <span>+12% from last month</span>
                    </div>
                </div>
            </div>
            <div class="insight-card">
                <div class="insight-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="insight-content">
                    <h3>Occupancy Rate</h3>
                    <p><%= occupancyRate %>% occupied</p>
                    <div class="trend down">
                        <i class="fas fa-arrow-down"></i>
                        <span>-3% from last month</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
