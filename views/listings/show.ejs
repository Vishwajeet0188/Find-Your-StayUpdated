    <% layout('layouts/boilerplate') %>

    <!-- ====================== MAIN LISTING SECTION ====================== -->
    <div class="row">
        <div class="col-6 offset-2 mt-3">

            <h3>Listing Details</h3>

            <!-- LISTING CARD WITH OWNER BADGE -->
            <div class="card" style="position: relative;">

                <!-- OWNER BADGE (TOP RIGHT) -->
                <% if (listing.owner) { %>
                <div class="owner-top-badge">
                    <i class="bi bi-person-circle me-1"></i>
                    Listed By: <%= listing.owner.username %>
                </div>
                <% } %>

             <img 
                src="<%= listing.image.url ? listing.image.url : listing.image %>" 
                class="card-img-top show-img" 
                alt="listing-image"
            >

                <div class="card-body">
                    <p class="card-text"><%= listing.title %></p>
                </div>
            </div>

            <!-- LISTING DETAILS -->
            <ul class="list-group list-group-flush mt-3">
                <li class="list-group-item"><b>Title:</b> <%= listing.title %></li>
                <li class="list-group-item"><b>Description:</b> <%= listing.description %></li>
                <li class="list-group-item">
                    <b>Price:</b> ₹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
                </li>
                <li class="list-group-item"><b>Location:</b> <%= listing.location %></li>
                <li class="list-group-item"><b>Country:</b> <%= listing.country %></li>
            </ul>

        

            <!-- SHOW EDIT + DELETE TO ANY LOGGED-IN USER -->
            <% if (currUser && listing.owner && listing.owner._id.toString() === currUser._id.toString()) { %>
            <div class="d-flex gap-3 mt-3">

                <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary px-4">
                    <i class="bi bi-pencil-fill"></i> Edit Listing
                </a>

                <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger px-4">
                        <i class="bi bi-trash-fill"></i> Delete Listing
                    </button>
                </form>

            </div>
            <% } %>


        </div>
    </div>

    <!-- Booking Button -->

        <div class="book">
            <a href="/bookings/new/<%= listing._id %>" class="book-btn pulse-btn">
                <i class="bi bi-calendar-plus me-2"></i>
                Book Now
            </a>
        </div>

    <!-- REVIEW FORM -->

    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="mt-4 needs-validation">

        <div class="d-flex justify-content-center">
            <div class="card shadow-sm p-4" style="width: 450px; border-radius: 15px;">

                <h5 class="text-center mb-3">Leave a Review</h5>

                <!-- ⭐ STARABILITY RATING -->
                
                <fieldset class="starability-slot">
                    <!-- <legend>First rating:</legend> -->
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>


                <!-- COMMENT -->
                <div class="mb-3 text-center">
                    <label for="comment" class="form-label fw-semibold">Your Review:</label>
                    <textarea class="form-control mx-auto"
                            name="review[comment]"
                            id="comment"
                            rows="2"
                            style="width: 90%; resize: none;"
                            placeholder="Write your thoughts..."
                            required></textarea>

                    <div class="invalid-feedback">
                        Please Add Some Valid Comment for Reviews
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">Submit Review</button>
                </div>

            </div>
        </div>

    </form>



    <!-- ====================== REVIEWS LIST ====================== -->
            <hr class="my-4">

            <h4 class="text-center mb-4">User Reviews</h4>

            <div class="container d-flex justify-content-center flex-wrap gap-4">

                <% if (!listing.reviews || listing.reviews.length === 0) { %>

                    <p class="text-muted">No reviews yet. Be the first to leave one!</p>

                <% } else { %>

                    <% listing.reviews.forEach(review => { %>

                        <div class="card shadow-sm p-3 mb-4"
                            style="width: 22rem; border-radius: 15px; background-color: #f7f7f7; border: none;">

                            <div class="card-body">

                                <p class="text-primary fw-semibold mb-1">
                                    <i class="bi bi-person-circle"></i>
                                    <%= review.author ? review.author.username : "Anonymous" %>
                                </p>

                                <!-- ⭐ Static Rating Output -->
                                <p class="starability-result mb-3" data-rating="<%= review.rating %>">
                                    Rated: <%= review.rating %> stars
                                </p>


                                <p class="card-text text-dark" style="font-size: 0.95rem; line-height: 1.5;">
                                    <%= review.comment.trim() ? review.comment : "No comment provided." %>
                                </p>

                                <small class="text-muted d-block mt-2">
                                    Posted on:
                                    <%= new Date(review.createdAt).toLocaleDateString("en-US", { 
                                        month: "short",
                                        day: "2-digit",
                                        year: "numeric"
                                    }) %>
                                </small>

                                <% if (currUser && review.author && review.author._id.toString() === currUser._id.toString()) { %>

                                    <div class="mt-3 d-flex gap-2">

                                        <a href="/listings/<%= listing._id %>/reviews/<%= review._id %>/edit"
                                        class="btn btn-sm btn-primary">Edit</a>

                                        <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                            method="POST">
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </form>

                                    </div>

                                <% } %>

                            </div>
                        </div>

                    <% }) %>

                <% } %>

            </div>


    <!-- ====================== CUSTOM STYLES ====================== -->
    <style>

    /* OWNER BADGE ON TOP RIGHT */
    .owner-top-badge {
        position: absolute;
        top: 16px;
        right: 16px;
        background: rgba(255,255,255,0.95);
        padding: 6px 16px;
        border-radius: 14px;
        font-weight: 600;
        display: flex;
        align-items: center;
        font-size: 0.9rem;
        color: #111827;
        box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        backdrop-filter: blur(4px);
    }


    .book {
    text-align: center; 
    margin: 30px 0;
    }

    .pulse-btn {
        background-color: #10b981;
        color: white;
        border: none;
        border-radius: 12px;
        padding: 16px 40px;
        font-weight: 600;
        font-size: 16px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

    .pulse-btn:hover {
        background-color: #0da271;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
        animation: pulse 1.5s infinite;
    }
 @keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(16, 185, 129, 0); }
    100% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0); }
    }
</style>
