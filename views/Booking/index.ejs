<script>
    // Add interactive functionality
    document.addEventListener('DOMContentLoaded', function() {
        // Add animation to booking cards on load
        const bookingCards = document.querySelectorAll('.booking-card');
        bookingCards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, index * 150);
        });
        
        // Add click handlers to booking action buttons
        document.querySelectorAll('.action-btn').forEach(button => {
            button.addEventListener('click', function() {
                const card = this.closest('.booking-card');
                const title = card.querySelector('.booking-title').textContent;
                const status = card.querySelector('.booking-status').textContent;
                
                // Determine action based on button content
                if (this.classList.contains('action-btn-modify')) {
                    alert(`Modify booking for "${title}"\nThis will open a Edit form.`);
                }
                else if (this.classList.contains('action-btn-primary')) {
                    if (this.textContent.includes('Contact')) {
                        alert(`Contacting host for "${title}"\nThis would open a messaging interface.`);
                    } else if (this.textContent.includes('Book Again')) {
                        alert(`Would redirect to rebook "${title}"`);
                    }
                } else if (this.classList.contains('action-btn-details')) {
                    alert(`Showing full details for "${title}"\nThis would expand the booking card with more information.`);
                }
            });
        });
        
        // Add hover effect to user info
        document.querySelector('.user-info').addEventListener('click', function() {
            alert('Redirecting to account settings...');
        });
    });
</script>