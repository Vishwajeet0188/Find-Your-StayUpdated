<% layout('layouts/boilerplate') %>


<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <h1>My Booking Details</h1>
        <p>Manage all your reservations, check-in details, and upcoming stays in one place</p>
    </div>
</section>

<main class="container">
    <!-- Statistics Overview -->
    <% if (bookings.length > 0) { %>
    <div class="stats-overview">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <div class="stat-number"><%= bookings.length %></div>
            <div class="stat-label">Total Stays</div>
        </div>
        
        <% 
            const upcoming = bookings.filter(b => new Date(b.checkIn) > new Date()).length;
            const current = bookings.filter(b => new Date(b.checkIn) <= new Date() && new Date(b.checkOut) >= new Date()).length;
            const completed = bookings.filter(b => new Date(b.checkOut) < new Date()).length;
        %>
        
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-number"><%= upcoming %></div>
            <div class="stat-label">Upcoming</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-key"></i>
            </div>
            <div class="stat-number"><%= current %></div>
            <div class="stat-label">Current</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-number"><%= completed %></div>
            <div class="stat-label">Completed</div>
        </div>
    </div>
    <% } %>

    <!-- Bookings Content -->
    <% if (bookings.length === 0) { %>
        <div class="empty-state">
            <i class="fas fa-search-location"></i>
            <h3>No Bookings Found</h3>
            <p>You haven't booked any stays yet. Discover amazing accommodations for your next adventure!</p>
            <a href="/listings" class="explore-btn">
                <i class="fas fa-search"></i> Find Your Stay
            </a>
        </div>
    <% } else { %>
        <div class="bookings-list">
            <% bookings.forEach((b, index) => { 
                // Determine status based on dates
                let stayStatus;
                let statusClass;

                const today = new Date();
                const checkInDate = new Date(b.checkIn);
                const checkOutDate = new Date(b.checkOut);

                if (b.status === 'cancelled') {
                    stayStatus = 'Cancelled';
                    statusClass = 'status-cancelled';
                } else if (checkInDate > today) {
                    stayStatus = 'Upcoming';
                    statusClass = 'status-upcoming';
                } else if (checkInDate <= today && checkOutDate >= today) {
                    stayStatus = 'Current';
                    statusClass = 'status-current';
                } else {
                    stayStatus = 'Completed';
                    statusClass = 'status-completed';
                }
            %>
                <div class="booking-card <%= b.status === 'cancelled' ? 'cancelled' : '' %>">
                    <div class="booking-card-header">
                        <h2 class="booking-title"><%= b.listing.title %></h2>
                        <span class="booking-status <%= statusClass %>"><%= stayStatus %></span>
                    </div>
                    
                    <div class="booking-card-body">
                        <div class="info-section">
                            <h3 class="section-title">
                                <i class="fas fa-user-circle"></i> Guest Information
                            </h3>
                            
                            <div class="info-row">
                                <span class="info-label">Full Name:</span>
                                <span class="info-value"><%= b.fullName %></span>
                            </div>
                            
                            <div class="info-row">
                                <span class="info-label">Email:</span>
                                <span class="info-value"><%= b.email %></span>
                            </div>
                            
                            <div class="info-row">
                                <span class="info-label">Phone:</span>
                                <span class="info-value"><%= b.phone %></span>
                            </div>
                            
                            <div class="info-row">
                                <span class="info-label">Address:</span>
                                <span class="info-value"><%= b.address %></span>
                            </div>
                        </div>
                        
                        <div class="info-section">
                            <h3 class="section-title">
                                <i class="fas fa-calendar-alt"></i> Stay Details
                            </h3>
                            
                            <div class="date-range-container">
                                <div class="date-container">
                                    <div class="date-label">Check-in</div>
                                    <div class="date-value"><%= b.checkIn.toDateString() %></div>
                                    <div class="date-time">3:00 PM</div>
                                </div>
                                
                                <div class="date-arrow">
                                    <i class="fas fa-arrow-right"></i>
                                </div>
                                
                                <div class="date-container">
                                    <div class="date-label">Check-out</div>
                                    <div class="date-value"><%= b.checkOut.toDateString() %></div>
                                    <div class="date-time">11:00 AM</div>
                                </div>
                            </div>
                            
                            <div class="info-row" style="margin-top: 20px;">
                                <span class="info-label">Duration:</span>
                                <span class="info-value">
                                    <% 
                                        const diffTime = Math.abs(checkOutDate - checkInDate);
                                        const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                                    %>
                                    <%= diffDays %> night<%= diffDays !== 1 ? 's' : '' %>
                                </span>
                            </div>
                            
                            <div class="info-row">
                                <span class="info-label">ID Verification:</span>
                                <span class="info-value">
                                    <% if (b.govtIdNumber) { %>
                                        <div class="id-masked">
                                            <i class="fas fa-id-card"></i> 
                                            <%= b.govtIdType %> - ****<%= b.govtIdNumber.slice(-4) %>
                                        </div>
                                    <% } else { %>
                                        <span class="not-provided">Not provided</span>
                                    <% } %>
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="booking-actions">
                        <% if (stayStatus === 'Upcoming' && b.status !== 'cancelled') { %>
                            <a href="/bookings/<%= b._id %>/edit"
                            class="action-btn action-btn-modify"  style="text-decoration: none;" >
                                <i class="fas fa-edit"></i> Edit Info
                            </a>

                            <form action="/bookings/<%= b._id %>/cancel"method="POST"onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                <button type="submit" class="action-btn action-btn-cancel">
                                    <i class="fas fa-times"></i> Cancel
                                </button>
                            </form>

                        <% } %>
                        
                        <% if (stayStatus === 'Current') { %>
                            <button class="action-btn action-btn-primary">
                                <i class="fas fa-phone-alt"></i> Contact Host
                            </button>
                            <button class="action-btn action-btn-secondary">
                                <i class="fas fa-directions"></i> Get Directions
                            </button>
                        <% } %>
                        
                        <% if (stayStatus === 'Completed') { %>
                            <button class="action-btn action-btn-secondary">
                                <i class="fas fa-star"></i> Leave Review
                            </button>
                            <button class="action-btn action-btn-primary">
                                <i class="fas fa-redo"></i> Book Again
                            </button>
                        <% } %>
                        
                       <br>

                    </div>
                    <div class="info-notice">
                        <span class="info-note">
                            <i class="fas fa-info-circle"></i> All booking details are shown above
                        </span>
                     </div>

                     <br>
                     
                </div>
            <% }); %>
        </div>
    <% } %>
</main>



