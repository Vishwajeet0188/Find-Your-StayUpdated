<% layout('layouts/boilerplate') %>

<div class="profile-edit-container">
    <!-- Header -->
    <div class="edit-header">
        <a href="/profile" class="back-btn">
            <i class="fas fa-arrow-left"></i>
            Back to Profile
        </a>
        <h1>Edit Your Profile</h1>
        <p>Update your personal information and preferences</p>
    </div>

    <!-- Profile Form -->
    <div class="edit-form-container">
        <form action="/profile/edit" method="POST" enctype="multipart/form-data" class="profile-form">
            <!-- Profile Picture Section -->
            <div class="form-section">
                <div class="section-header">
                    <h2><i class="fas fa-user-circle"></i> Profile Picture</h2>
                </div>
                <div class="avatar-upload">
                    <div class="current-avatar">
                        <div class="avatar-preview">
                            <% if (user.profilePicture) { %>
                                <img src="<%= user.profilePicture %>" alt="Current profile">
                            <% } else { %>
                                <div class="avatar-placeholder">
                                    <% 
                                        let initials = 'US';
                                        if (user.fullName) {
                                            const nameParts = user.fullName.trim().split(' ');
                                            if (nameParts.length >= 2) {
                                                initials = nameParts[0].charAt(0).toUpperCase() + nameParts[nameParts.length - 1].charAt(0).toUpperCase();
                                            } else if (nameParts.length === 1) {
                                                initials = nameParts[0].charAt(0).toUpperCase();
                                            }
                                        }
                                    %>
                                    <%= initials %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                </div>
            </div>

            <!-- Personal Information -->
            <div class="form-section">
                <div class="section-header">
                    <h2><i class="fas fa-id-card"></i> Personal Information</h2>
                </div>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="fullName">
                            <i class="fas fa-user"></i>
                            Full Name
                        </label>
                        <input 
                            type="text" 
                            id="fullName" 
                            name="fullName" 
                            value="<%= user.fullName || '' %>" 
                            placeholder="Enter your full name"
                            required
                        >
                    </div>

                    <div class="form-group">
                        <label for="email">
                            <i class="fas fa-envelope"></i>
                            Email Address
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            value="<%= user.email || '' %>" 
                            placeholder="your@email.com"
                            required
                        >
                    </div>

                    <div class="form-group">
                        <label for="phone">
                            <i class="fas fa-phone"></i>
                            Phone Number
                        </label>
                        <input 
                            type="tel" 
                            id="phone" 
                            name="phone" 
                            value="<%= user.phone || '' %>" 
                            placeholder="+1 (555) 123-4567"
                        >
                    </div>

                    <div class="form-group">
                        <label for="username">
                            <i class="fas fa-at"></i>
                            Username
                        </label>
                        <input 
                            type="text" 
                            id="username" 
                            name="username" 
                            value="<%= user.username || '' %>" 
                            placeholder="Choose a username"
                            required
                        >
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <a href="/profile" class="cancel-btn">
                    <i class="fas fa-times"></i>
                    Cancel
                </a>
                <button type="submit" class="save-btn">
                    <i class="fas fa-save"></i>
                    Save Changes
                </button>
            </div>
        </form>
    </div>

    <!-- Danger Zone -->
    <div class="danger-zone">
        <div class="danger-header">
            <h2><i class="fas fa-exclamation-triangle"></i> Danger Zone</h2>
        </div>
        <div class="danger-actions">
            <div class="danger-item">
                <div class="danger-info">
                    <h3>Delete Account</h3>
                    <p>Permanently delete your account and all associated data</p>
                </div>
                <button type="button" class="danger-btn" id="deleteAccountBtn">
                    <i class="fas fa-trash"></i>
                    Delete Account
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Account Modal -->
<div class="modal-overlay" id="deleteModal">
    <div class="modal">
        <div class="modal-header">
            <h3><i class="fas fa-exclamation-triangle"></i> Delete Account</h3>
            <button class="modal-close" id="closeModal">&times;</button>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete your account? This action cannot be undone.</p>
            <p>All your data, including listings, bookings, and reviews will be permanently deleted.</p>
            <div class="confirmation-input">
                <label for="confirmDelete">Type "DELETE" to confirm:</label>
                <input type="text" id="confirmDelete" placeholder="DELETE">
            </div>
        </div>
        <div class="modal-actions">
            <button class="modal-cancel" id="cancelDelete">Cancel</button>
            <form action="/profile/delete" method="POST" style="display: inline;">
                <button type="submit" class="modal-confirm" id="confirmDeleteBtn" disabled>
                    Delete Account Permanently
                </button>
            </form>
        </div>
    </div>
</div>

