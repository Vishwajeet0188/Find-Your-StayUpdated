}
.btn-subscribe {
    background:#f5576c;
    color:white;
    border:none;
    padding:14px 22px;
    border-radius:50px;
    flex-shrink:0;
    cursor:pointer;
    transition:all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}
